{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}