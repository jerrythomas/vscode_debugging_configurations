{
    "version": "2.0.0",
    "tasks": [
        {
            // this task is for typescript
            "type": "typescript",
            // tsconfig.json is used for compilation
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc-watch"
            ],
            // we are using nodemon executable
            // we are rebulding app on every change
            "option": "watch",
            // label is used for task selection
            "label": "tsc: tsconfig.json",
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
    ]
}